generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum GENDER {
  MALE
  FEMALE
}

enum CHEST_PAIN {
  TYPICAL_ANGINA
  ATYPICAL_ANGINA
  NON_ANGIAL_PAIN
  ASYMPTOMATIC
}

enum REST_ECG {
  NORMAL
  ST_T_WAVE_ABNORMALITY
  LEFT_VENTRICUALR_HYPERTOPHY
}

enum SLOPE {
  UPSLOPING
  FLAT
  DOWNSLOPING
}

enum PREDICTION {
  HEALTHY
  UNHEALTHY
}

model Record {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  userId          String

  age             Int
  sex             GENDER
  cp              CHEST_PAIN
  trestBps        Int
  chol            Int
  fbs             Boolean
  restEcg         REST_ECG
  thalach         Int
  exang           Boolean
  oldPeak         Int
  slope           SLOPE
  ca              Int
  thal            Int

  prediction      PREDICTION

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
